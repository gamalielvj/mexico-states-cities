<% if obj.errors.any? %>
<div id="error_explanation">
  <div class="form-group">
   <div id="panel panel-danger">
      <div class="alert alert-danger">
        <h4 class="panel-title">The form contains <%= pluralize(obj.errors.count, "error") %>.</h4>
          <ul>
            <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
</div>
<% end %>
