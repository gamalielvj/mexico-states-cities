<%= form_with(model: person, local: true, html: { autocomplete: "off" }) do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :country_id %>
    <%= form.collection_select :country_id, @countries,:id, :name, {:prompt => 'Please select a Country...'}%>
  </div>

  <div class="field">
    <%= form.label :state_id %>
    <%= form.collection_select :state_id, @states, :id, :name, {:prompt => 'Please select a State...'} %>
  </div>

  <div class="field">
    <%= form.label :city_id %>
    <%= form.collection_select :city_id, @cities, :id, :name, {:prompt => 'Please select a City...'} %>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
